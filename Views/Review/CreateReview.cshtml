<link rel="stylesheet" href="~/css/Stars.css">
@model TasteFinder.Models.Review
<div class="container">
    <div class="row align-items-center">
        <div class="col-xl-12 col-lg-12 col-md-12 col-12">
            <!-- Bg -->
            <div class="pt-20 rounded-top" style="background-image: url('/images/white-logo.jpg'); background-size: cover;">
                @*<img src="~/images/white-logo.jpg" alt="">*@
            </div>
            <div class="card rounded-bottom smooth-shadow-sm" style="min-height:250px;">
            <div class="d-flex align-items-center justify-content-between
                      pt-4 pb-6 px-4">
                <!-- avatar -->
                <div class="d-flex align-items-center">
                    <!-- content -->
                    <div class="lh-1">
                        <h2 class="mb-0">
                            Name
                        </h2>
                    </div>
 			    </div>
                        
			    <div>
                <!-- button -->
                    <p>the rate</p>
                </div>
            </div>
		    
            <!-- nav --> 
        </div>
    </div>
        <!-- page content -->
    <div class="py-6">
        <div class="row">
            <div class="offset-lg-1 col-lg-10 col-md-12 col-12">
                <!-- row -->
                <!-- hr -->
                <div class="mb-8">
			        <div class="card bg-gray-300 shadow-none mb-4" style="min-height: 50px;">
                        <!-- card body -->
                        <div class="card-body">
                            <div class="d-flex justify-content-between
                                    align-items-center">
                                <div>
                                        <h5 class="mb-0" style="color:#fb5849">Share your review</h5>
                                </div>
            
                            </div>
                        </div>
                    </div>
                    <!-- card -->
                    <ul class="card d-flex align-items-center justify-content-between
                        pt-4 pb-6 px-4" style="min-height: 150px">
                        <form asp-action="CreateReview" method="post">
                            <!-- list group -->
                                <ul class="list-group list-group-flush">
                                    <!-- list group item -->
                                    <li class="list-group-item p-3">
                                                <!-- content -->
                                        <div class="ms-3" style="margin-left:6px;">
			                                <input type="hidden" asp-for="Stars" id="selectedRating" />
                                            @Html.HiddenFor(model => model.Stars)
                                            <div class="form-group cardd">
        		                                                <span onclick="gfg(1)"
              			                                            class="star">★
        		                                                </span>
        		                                                <span onclick="gfg(2)"
              			                                            class="star">★
        		                                                </span>
        		                                                <span onclick="gfg(3)"
              			                                            class="star">★
        		                                                </span>
        		                                                <span onclick="gfg(4)"
              			                                            class="star">★
        		                                                </span>
        		                                                <span onclick="gfg(5)"
              			                                            class="star">★
        		                                                </span>
        		                                                <h3 id="output">
              			                                            Rating is: 0/5
          		                                                </h3>
    	                                    </div>
                                        </div>
                                    </li>
                                    <li class="mb-3">
                        	                                <div class="form-group">
        				                                        <label asp-for="Text">Content</label>
        				                                        @Html.TextAreaFor(model => model.Text, new {cols = 20, rows = 5})
    				                                        </div>
                    	            </li>
                    	            <div class="main-white-button scroll-to-section text-center">
                        	                                <button type="submit" class="btn btn-block mb-4" style="background-color:#fb5849; border-color:#fb5849; color:white;">
                            		                            <h6>Send</h6>
                        	                                </button>
                    	            </div>
                                </ul>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/Stars.js"></script>